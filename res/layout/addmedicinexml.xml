<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:gravity="center_horizontal" >
    <TextView
        android:id="@+id/addmed_medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       
      
        
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="Name" />
    
    <EditText
            android:id="@+id/addmed_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Taken From"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF" />
    
    
   <EditText
            android:id="@+id/addmed_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Taken till"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF" />
     
     
     <RadioGroup
                android:id="@+id/addmed_afterbefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
         
                <RadioButton
                    android:id="@+id/addmed_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="before"
                    android:checked="true" />
         
                <RadioButton
                    android:id="@+id/addmed_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="after" />
         
            </RadioGroup>
  <EditText
            android:id="@+id/addmed_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Times Taken"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF" />

<ImageView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/add"
    android:id="@+id/addmed_add"/>
</LinearLayout>
